<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.academiadecodigo.bootcamp.model.Reservation" table="reservation" lazy="false">

        <id name="id" column="reservation_id" type="integer">
            <generator class="identity"/>
        </id>
        <property name="userID" column="client_id" type="java.lang.Integer"/>
        <property name="facilityID" column="facility_id" type="java.lang.Integer"/>
        <property name="date" column="reservation_date" type="date"/>

    </class>

</hibernate-mapping>

