<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.academiadecodigo.bootcamp.model.User" table="client" lazy="false">

        <id name="id" column="client_id" type="integer">
            <generator class="identity"/>
        </id>

        <property name="username" column="client_name" type="string"/>
        <property name="password" column="client_pass" type="string"/>
        <property name="email" column="client_email" type="string"/>

    </class>

</hibernate-mapping>
